---
import { Image } from "astro:assets";

interface Props {
  name: string;
  image: ImageMetadata;
}

const { name, image } = Astro.props;
---

<div class="relative flex h-24 w-full overflow-hidden bg-linear-to-r from-white to-transparent">
  <div
    class="bg-primary relative z-10 flex w-[40%] items-center justify-center pr-8 [clip-path:polygon(0_0,80%_0,90%_110%,0_110%)]"
  >
    <Image
      class="pointer-events-none h-full w-full object-cover select-none"
      src={image}
      alt={`${name} header image`}
      height={400}
    />
    <div class="bg-primary/30 ffx-watertexture absolute inset-0 flex justify-center px-3">
      <div class="container flex items-end justify-start">
        <h2 class="ffx-title text-5xl/normal">{name}</h2>
      </div>
    </div>
  </div>

  <!-- <div class="flex flex-1 items-center justify-center pl-4"></div> -->
  <div
    class="pointer-events-none absolute inset-0 right-[60%] z-20 shadow-[inset_8px_0_10px_-6px_rgba(255,255,255,0.5),inset_0_8px_10px_-6px_rgba(255,255,255,0.5),inset_0_-8px_10px_-6px_rgba(255,255,255,0.5)] [clip-path:polygon(0_0,80%_0,90%_110%,0_110%)]"
  >
  </div>
</div>
