---
export interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props;
---

<div
  class="flex h-24 w-24 items-center justify-center overflow-hidden rounded-full border border-solid border-slate-600 bg-gradient-to-br from-slate-800 to-slate-600 p-3"
>
  <img src={image} alt={`${name} monster image`} class="object-cover" draggable="false" />
</div>
