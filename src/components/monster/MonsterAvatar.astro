---
import { Image } from "astro:assets";

export interface Props {
  name: string;
  image: ImageMetadata;
}

const { name, image } = Astro.props;
---

<div
  class="flex h-24 w-24 items-center justify-center overflow-hidden rounded-full border border-solid border-slate-600 bg-gradient-to-br from-slate-900 to-slate-800 p-3"
>
  <Image src={image} width={70} alt={`${name} monster image`} class="object-cover" draggable="false" />
</div>
